<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorPrimaryDark"
  tools:context=".ui.DetailScreen.DetailScreenActivity">
  <ImageView
    android:id="@+id/IV_selectedMovie"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:scaleType="centerCrop"
    android:src="@drawable/movies_cover"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />
  <TextView
    android:id="@+id/TV_name_of_SelectedMovie"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:fontFamily="@font/aladin"
    android:text="Movie Name"
    android:textColor="@color/white_color"
    android:textSize="18dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/IV_selectedMovie"
    />
  <view
    android:id="@+id/view_one"
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:layout_marginTop="8dp"
    android:background="@color/white_color"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/TV_name_of_SelectedMovie"
    />
  <LinearLayout
    android:id="@+id/layout_info"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    android:weightSum="3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/view_one"
    >
    <LinearLayout
      android:id="@+id/layout_user_rate"
      android:layout_width="100dp"
      android:layout_height="50dp"
      android:layout_weight="1"
      android:layout_marginLeft="8dp"
      android:orientation="horizontal"
      android:weightSum="1"

      >
      <ImageView
        android:id="@+id/IV_user_rate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/imdb2"
        />
      <TextView
        android:id="@+id/TV_user_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/aladin"
        android:text="@string/user_rate"
        android:textColor="#ffff"
        android:textSize="20sp"

        />
    </LinearLayout>
    <LinearLayout
      android:id="@+id/layout_release_date"
      android:layout_width="wrap_content"
      android:layout_height="50dp"

      android:layout_weight="1"
      android:layout_marginLeft="16dp"
      android:orientation="horizontal"
      android:weightSum="1"
      >
      <ImageView
        android:id="@+id/IV_release_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/date_icon"
        tools:ignore="NestedWeights"/>
      <TextView
        android:id="@+id/TV_release_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginTop="16dp"
        android:paddingLeft="8dp"
        android:fontFamily="@font/aladin"
        android:text="27/3/20175"
        android:textColor="#ffff"
        android:textSize="20sp"
        />
    </LinearLayout>
  </LinearLayout>
  <view
    android:id="@+id/view_two"
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:layout_marginTop="8dp"
    android:background="@color/white_color"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/layout_info"
    />
  <TextView
    android:id="@+id/TV_summary"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:fontFamily="@font/aladin"
    android:text="Summary"
    android:textColor="@color/white_color"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/view_two"
    />
  <TextView
    android:id="@+id/Tv_Descraption_of_slected_movie"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_margin="8dp"
    app:layout_constraintTop_toBottomOf="@+id/TV_summary"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>